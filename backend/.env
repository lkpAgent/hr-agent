# HR Agent Backend Environment Configuration
# Copy this file to .env and update the values

# Application Settings
PROJECT_NAME=HR Agent
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://myuser:postgresqlpass2025@113.240.110.92:15432/hragent
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_NAME=hr_agent

# Test Database (optional)
TEST_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/hr_agent_test

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173"]

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langchain-api-key-here
LANGCHAIN_PROJECT=hr-agent

# Vector Database (pgvector)
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.8

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=["pdf","docx","txt","md"]
UPLOAD_DIR=uploads
TEMP_DIR=temp

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Session Configuration
SESSION_EXPIRE_HOURS=24
SESSION_COOKIE_NAME=hr_agent_session

# Monitoring and Health Check
HEALTH_CHECK_INTERVAL=30  # seconds
METRICS_ENABLED=true

# Development Settings
RELOAD=true
WORKERS=1

# Production Settings (uncomment for production)
# DEBUG=false
# RELOAD=false
# WORKERS=4
# LOG_LEVEL=WARNING